---
import { cn } from '@/core/utils';
import SecTitle from '../ui/sec-title';

interface Props {
  title: string;
  imgUrl: string;
  reverse?: boolean;
}

const { title, imgUrl, reverse = false } = Astro.props;
---

<div
  class={cn('flex flex-col lg:flex-row-reverse', {
    'lg:flex-row': reverse,
  })}
>
  <div class='bg-dark py-16 flex-1 lg:grid lg:place-content-center'>
    <SecTitle>{title}</SecTitle>
  </div>
  <div class='flex-1 relative'>
    <div
      class={cn(
        'bg-gradient-to-b from-dark/90 from-[1%] absolute size-full top-0 z-20 lg:bg-gradient-to-l',
        {
          'lg:bg-gradient-to-r': reverse,
        },
      )}
    >
    </div>
    <img
      class='relative w-full z-10 h-48 object-cover lg:h-80'
      src={imgUrl}
      alt={title}
    />
  </div>
</div>
