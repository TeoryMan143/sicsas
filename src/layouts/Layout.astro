---
import { ViewTransitions } from 'astro:transitions';
import '@fontsource-variable/rubik';
import '@fontsource/questrial';
import Footer from '@/components/Footer/index.astro';
import Header from '@/components/Header/index.astro';
import '@/styles/globals.css';
import { Toaster } from 'sonner';

interface Props {
  title: string;
}

const description =
  'Diseño, Instalación y Mantenimiento de Sistemas Contra incendio. La importancia de tomarse en serio la seguridad';

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content={description} />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' href='/favicono.ico' />
    <title>{title}</title>
    <meta property='og:title' content='Seguridad Insdustrial Cárdenas SAS' />
    <meta property='og:description' content={description} />
    <meta property='og:image:type' content='image/png' />
    <meta property='og:image:width' content='1500' />
    <meta property='og:image:height' content='1500' />
    <meta property='og:image' content='/meta-icon.png' />
    <meta
      property='og:url'
      content='https://www.seguridad-industrial-cardenas.com/'
    />
    <meta property='og:type' content='website' />
    <meta
      name='keywords'
      content='seguridad industrial, sistemas contra incendios, protección respiratoria, protección visual, extintores, alarmas de incendio, mantenimiento de sistemas contra incendios, inspección de seguridad, señalización de seguridad, equipos de emergencia, rociadores automáticos, extinción por espuma, puertas cortafuego, Cali, Colombia'
    />
    <ViewTransitions />
  </head>
  <body>
    <Header />
    <main class='mt-24 relative lg:mt-36'>
      <slot />
    </main>
    <Footer />
    <Toaster client:only='react' />
  </body>
</html>

<style>
  body {
    display: grid;
    grid-template-rows: 1fr auto;
  }
</style>
<style is:global>
  html {
    font-family: 'Rubik Variable', sans-serif;
  }

  body {
    min-height: 100dvh;
  }

  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    text-wrap: balance;
  }
</style>
