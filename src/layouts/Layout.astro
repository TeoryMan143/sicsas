---
import { ViewTransitions } from 'astro:transitions';
import '@fontsource-variable/rubik';
import '@fontsource/questrial';
import SideNav from '@components/SideNav.astro';
import MailIcon from '@components/icons/mail';
import WhatsappIcon from '@components/icons/whatsapp';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <header class='flex justify-center relative'>
      <SideNav />
      <img class='h-24' src='/full-logo.png' alt='SICSAS logo' />
    </header>
    <main>
      <slot />
    </main>
    <footer class='bg-pale p-5 space-y-5 h-full text-white'>
      <p class='text-xl'>
        Para cotizaciones o programar una visita, por favor contactarnos.
      </p>
      <div>
        <div class='flex items-center gap-2'>
          <MailIcon className='text-3xl' />
          <p>Correo electr√≥nico</p>
        </div>
        <p>seguridadindustrialcardenas@gmail.com</p>
      </div>
      <div>
        <div class='flex items-center gap-2'>
          <WhatsappIcon className='text-3xl' />
          <p>Celulares y Whatsapp</p>
        </div>
        <p>316 423 7947 y 316 423 7948</p>
      </div>
    </footer>
  </body>
</html>

<style>
  body {
    display: grid;
    grid-template-rows: auto 1fr auto;
  }
</style>
<style is:global>
  html {
    font-family: 'Rubik Variable', sans-serif;
  }

  body {
    min-height: 100dvh;
  }
</style>
